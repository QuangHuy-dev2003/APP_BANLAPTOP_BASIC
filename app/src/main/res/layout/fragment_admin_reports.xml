<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header: tiêu đề căn giữa + nút mở menu bên phải -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Báo cáo thống kê"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary" />

            <ImageButton
                android:id="@+id/btnOpenDrawer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_menu"
                android:contentDescription="Mở menu"
                app:tint="@color/textPrimary"/>
        </LinearLayout>

        <!-- Bộ lọc năm căn giữa -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_year"
                android:textColor="@color/textSecondary"
                android:layout_marginEnd="8dp"/>

            <Spinner
                android:id="@+id/spYear"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/bg_spinner_outline"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:prompt="@string/prompt_select_year"/>
        </LinearLayout>

        <!-- Hàng thẻ số liệu tổng quan -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="2"
            android:measureWithLargestChild="true">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doanh thu (dự kiến)"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary"/>
                <TextView
                    android:id="@+id/tvRevenueProjected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0₫"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="4dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(Tổng các trạng thái trừ Đã huỷ)"
                    android:textColor="@color/textSecondary"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Doanh thu (thực)"
                    android:textColor="@color/textSecondary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvRevenueReal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="0₫"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="(Trạng thái Đã giao)"
                    android:textColor="@color/textSecondary"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Hàng thẻ số lượng đơn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã giao"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary"/>
                <TextView
                    android:id="@+id/tvCountDelivered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã huỷ"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary"/>
                <TextView
                    android:id="@+id/tvCountCancelled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <Space
                android:layout_width="8dp"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_card"
                android:padding="16dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Khác"
                    android:textStyle="bold"
                    android:textColor="@color/textSecondary"/>
                <TextView
                    android:id="@+id/tvCountOther"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Biểu đồ tròn top 3 sản phẩm bán chạy -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top 3 sản phẩm bán chạy"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"/>
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieTopProducts"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_card"/>

        <!-- Biểu đồ cột doanh thu theo tháng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doanh thu theo tháng"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"/>
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barRevenueByMonth"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_card"/>

    </LinearLayout>

</ScrollView>
