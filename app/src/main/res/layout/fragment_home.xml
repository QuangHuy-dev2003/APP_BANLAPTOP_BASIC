<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground"
    tools:context=".ui.fragments.HomeFragment">

    <TextView
        android:id="@+id/tv_home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trang Chủ"
        android:textSize="24sp"
        android:textColor="@color/textPrimary"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Bỏ text chào mừng, thay bằng icon giỏ hàng có badge -->
    <FrameLayout
        android:id="@+id/btn_cart_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@+id/tv_home_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_home_title"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_cart"
            app:tint="@color/textPrimary" />

        <TextView
            android:id="@+id/badge_cart"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="end|top"
            android:background="@drawable/bg_badge_red"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_products"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_home_title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_product_grid" />

</androidx.constraintlayout.widget.ConstraintLayout>
