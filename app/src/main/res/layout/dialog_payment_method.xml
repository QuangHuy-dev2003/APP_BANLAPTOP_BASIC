<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_round"
    android:padding="20dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="汳ｳ Ch盻肱 phﾆｰﾆ｡ng th盻ｩc thanh toﾃ｡n"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/bg_rounded_button"
            android:padding="8dp"
            android:contentDescription="ﾄ静ｳng"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Phﾆｰﾆ｡ng th盻ｩc 1: Thanh toﾃ｡n khi nh蘯ｭn hﾃng (M蘯ｷc ﾄ黛ｻ杵h) -->
    <LinearLayout
        android:id="@+id/layout_cod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_payment_method_selected"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_cash"
            android:layout_marginEnd="12dp"
            android:contentDescription="Ti盻］ m蘯ｷt" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toﾃ｡n khi nh蘯ｭn hﾃng"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toﾃ｡n b蘯ｱng ti盻］ m蘯ｷt khi nh蘯ｭn hﾃng"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ic_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_status_available"
            android:contentDescription="Tr蘯｡ng thﾃ｡i kh蘯｣ d盻･ng" />

    </LinearLayout>

    <!-- Phﾆｰﾆ｡ng th盻ｩc 2: VNPAY (Khﾃｴng kh蘯｣ d盻･ng) -->
    <LinearLayout
        android:id="@+id/layout_vnpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_payment_method_disabled"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_vnpay"
            android:layout_marginEnd="12dp"
            android:contentDescription="VNPAY"
            android:alpha="0.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toﾃ｡n qua VNPAY"
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toﾃ｡n tr盻ｱc tuy蘯ｿn qua VNPAY"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_status_unavailable"
            android:contentDescription="Tr蘯｡ng thﾃ｡i khﾃｴng kh蘯｣ d盻･ng" />

    </LinearLayout>

    <!-- Phﾆｰﾆ｡ng th盻ｩc 3: Chuy盻ハ kho蘯｣n (Khﾃｴng kh蘯｣ d盻･ng) -->
    <LinearLayout
        android:id="@+id/layout_bank_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_payment_method_disabled"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bank"
            android:layout_marginEnd="12dp"
            android:contentDescription="Chuy盻ハ kho蘯｣n"
            android:alpha="0.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toﾃ｡n qua chuy盻ハ kho蘯｣n"
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuy盻ハ kho蘯｣n ngﾃ｢n hﾃng"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_status_unavailable"
            android:contentDescription="Tr蘯｡ng thﾃ｡i khﾃｴng kh蘯｣ d盻･ng" />

    </LinearLayout>

    <!-- Nﾃｺt xﾃ｡c nh蘯ｭn -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Xﾃ｡c nh蘯ｭn"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/bg_button_primary"
        android:stateListAnimator="@null" />

</LinearLayout>
