<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_round"
    android:padding="20dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="💳 Chọn phương thức thanh toán"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/bg_rounded_button"
            android:padding="8dp"
            android:contentDescription="Đóng"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Phương thức 1: Thanh toán khi nhận hàng (Mặc định) -->
    <LinearLayout
        android:id="@+id/layout_cod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_payment_method_selected"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_cash"
            android:layout_marginEnd="12dp"
            android:contentDescription="Tiền mặt" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán khi nhận hàng"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán bằng tiền mặt khi nhận hàng"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ic_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_status_available"
            android:contentDescription="Trạng thái khả dụng" />

    </LinearLayout>

    <!-- Phương thức 2: VNPAY (Không khả dụng) -->
    <LinearLayout
        android:id="@+id/layout_vnpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_payment_method_disabled"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_vnpay"
            android:layout_marginEnd="12dp"
            android:contentDescription="VNPAY"
            android:alpha="0.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán qua VNPAY"
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán trực tuyến qua VNPAY"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_status_unavailable"
            android:contentDescription="Trạng thái không khả dụng" />

    </LinearLayout>

    <!-- Phương thức 3: Chuyển khoản (Không khả dụng) -->
    <LinearLayout
        android:id="@+id/layout_bank_transfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/bg_payment_method_disabled"
        android:padding="16dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_bank"
            android:layout_marginEnd="12dp"
            android:contentDescription="Chuyển khoản"
            android:alpha="0.5" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thanh toán qua chuyển khoản"
                android:textSize="16sp"
                android:textColor="@color/textSecondary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chuyển khoản ngân hàng"
                android:textSize="14sp"
                android:textColor="@color/textSecondary"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_status_unavailable"
            android:contentDescription="Trạng thái không khả dụng" />

    </LinearLayout>

    <!-- Nút xác nhận -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Xác nhận"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/bg_button_primary"
        android:stateListAnimator="@null" />

</LinearLayout>
