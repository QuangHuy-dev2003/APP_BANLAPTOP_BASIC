<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <!-- Header với icon và title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_warning"
            android:layout_marginEnd="16dp"
            app:tint="@color/warning_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Xác nhận hủy đơn hàng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/textPrimary"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Nội dung thông báo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn có chắc chắn muốn hủy đơn hàng này?"
        android:textSize="16sp"
        android:textColor="@color/textSecondary"
        android:lineSpacingExtra="4dp"
        android:layout_marginBottom="16dp" />

    <!-- Thông tin đơn hàng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/order_info_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/textViewOrderInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đơn hàng #12345"
            android:textSize="14sp"
            android:textColor="@color/textPrimary"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/textViewOrderTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 2.500.000 VNĐ"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Cảnh báo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/warning_info_background"
        android:padding="12dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_info"
            android:layout_marginEnd="8dp"
            app:tint="@color/warning_color" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hành động này không thể hoàn tác. Đơn hàng sẽ được chuyển sang trạng thái 'Đã hủy'."
            android:textSize="13sp"
            android:textColor="@color/warning_text"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="12dp"
            android:minWidth="100dp"
            android:text="Không"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:background="@drawable/btn_cancel_dialog"
            android:fontFamily="sans-serif-medium" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonConfirm"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="100dp"
            android:text="Có"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_confirm_cancel"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

</LinearLayout>
