<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom Dialog Style -->
    <style name="CustomDialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- Dialog Animation -->
    <style name="DialogAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <!-- Payment Method Dialog Style -->
    <style name="PaymentMethodDialog" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- Dialog Fade Scale Animation -->
    <style name="DialogFadeScaleAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_scale_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_scale_out</item>
    </style>

    <!-- Spinner text black styles -->
    <style name="SpinnerTextBlack" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SpinnerDropdownTextBlack" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
